# Server configuration
MARKETPLACE__HOST=127.0.0.1
MARKETPLACE__PORT=3000

# Database
MARKETPLACE__DATABASE_URL=sqlite:data/marketplace.db
# MARKETPLACE__DATABASE_KEY=your-encryption-key-here

# Required: Session secret (generate with: openssl rand -hex 32)
MARKETPLACE__SESSION_SECRET=your-session-secret-here

# Required: Admin npub (marketplace owner)
MARKETPLACE__ADMIN_NPUB=npub1...

# Mint configuration
MARKETPLACE__MINT__DATA_DIR=data/mint
MARKETPLACE__MINT__NAME=Marketplace Mint
MARKETPLACE__MINT__DESCRIPTION=Private marketplace Cashu mint

# Lightning backend (lnd, cln, or lnbits)
MARKETPLACE__LIGHTNING__BACKEND=lnbits
MARKETPLACE__LIGHTNING__URL=https://your-lnbits-instance.com
MARKETPLACE__LIGHTNING__API_KEY=your-api-key

# Marketplace settings
MARKETPLACE__FEE_PERCENT=1
MARKETPLACE__ESCROW_DAYS=10
MARKETPLACE__BROWSING_FEE_SATS=100
MARKETPLACE__PRICE_LOCK_HOURS=3
MARKETPLACE__SESSION_HOURS=168
